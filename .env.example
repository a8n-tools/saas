# a8n.tools Environment Configuration
# Copy this file to .env and update the values

# =============================================================================
# Database
# =============================================================================
POSTGRES_PASSWORD=devpassword
DATABASE_URL=postgres://a8n:devpassword@localhost:5432/a8n_platform

# =============================================================================
# API Server
# =============================================================================
HOST=0.0.0.0
PORT=8080
RUST_LOG=debug
CORS_ORIGIN=http://localhost:5173
ENVIRONMENT=development
APP_URL=http://localhost:5173

# =============================================================================
# JWT (generate with: openssl rand -base64 32)
# =============================================================================
JWT_SECRET=your-secret-key-at-least-32-characters-long

# =============================================================================
# Stripe (get from Stripe Dashboard)
# =============================================================================
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
STRIPE_PRICE_ID=price_personal_xxx
STRIPE_BUSINESS_PRICE_ID=price_business_xxx

# =============================================================================
# Email (SMTP)
# SMTP_TLS: "implicit" for port 465 (TLS from start), "starttls" for port 587
# =============================================================================
SMTP_HOST=mail.a8n.run
SMTP_PORT=465
SMTP_TLS=implicit
SMTP_FROM="a8n Tools <your-username@a8n.run>"
SMTP_USERNAME="<your username>@a8n.run"
SMTP_PASSWORD="<app password in stalwart>"
EMAIL_ENABLED=true

# =============================================================================
# Frontend
# =============================================================================
VITE_API_URL=http://localhost:18080
VITE_SHOW_BUSINESS_PRICING=false

# =============================================================================
# Production Only - Docker Image Versions
# =============================================================================
API_VERSION=latest
FRONTEND_VERSION=latest
