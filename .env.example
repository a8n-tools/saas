# a8n.tools Environment Configuration
# Copy this file to .env and update the values

# =============================================================================
# Database
# =============================================================================
POSTGRES_PASSWORD=devpassword
DATABASE_URL=postgres://a8n:devpassword@localhost:5432/a8n_platform

# =============================================================================
# API Server
# =============================================================================
HOST=0.0.0.0
PORT=8080
RUST_LOG=debug
CORS_ORIGIN=http://localhost:5173
ENVIRONMENT=development

# =============================================================================
# JWT (generate with: openssl genpkey -algorithm Ed25519 -out jwt_private.pem)
# =============================================================================
JWT_PRIVATE_KEY_PATH=./secrets/jwt_private.pem
JWT_PUBLIC_KEY_PATH=./secrets/jwt_public.pem

# =============================================================================
# Stripe (get from Stripe Dashboard)
# =============================================================================
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
STRIPE_PRICE_ID=price_personal_xxx
STRIPE_BUSINESS_PRICE_ID=price_business_xxx

# =============================================================================
# Email (Stalwart SMTP)
# =============================================================================
SMTP_HOST=stalwart
SMTP_PORT=25
SMTP_FROM=noreply@a8n.tools

# =============================================================================
# Frontend
# =============================================================================
VITE_API_URL=http://localhost:8080
VITE_SHOW_BUSINESS_PRICING=false

# =============================================================================
# Production Only - Docker Image Versions
# =============================================================================
API_VERSION=latest
FRONTEND_VERSION=latest

# =============================================================================
# Production Only - SSL/TLS (Let's Encrypt)
# =============================================================================
ACME_EMAIL=admin@a8n.tools
DNS_PROVIDER=cloudflare
CF_API_EMAIL=your-cloudflare-email@example.com
CF_API_KEY=your-cloudflare-api-key

# =============================================================================
# Production Only - Traefik Dashboard Auth
# Generate with: htpasswd -nb admin password | sed -e s/\\$/\\$\\$/g
# =============================================================================
TRAEFIK_DASHBOARD_AUTH=admin:$$apr1$$xxx
